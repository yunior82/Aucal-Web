    <script>
        const values = [
            [
                {% for course in global.courses %}
                    {% if course.category_id == 2 %}
                        '{{ course.title }}',
                    {% endif %}
                {% endfor %}
            ],
            [
                {% for course in global.courses %}
                    {% if course.category_id == 3 %}
                        '{{ course.title }}',
                    {% endif %}
                {% endfor %}
            ],
            [
                {% for course in global.courses %}
                    {% if course.category_id == 1 %}
                        '{{ course.title }}',
                    {% endif %}
                {% endfor %}
            ]
        ];


        const urls = [
            [
                {% for course in global.courses %}
                    {% if course.category_id == 2 %}
                        '/oferta-formativa/master-oficial/{{ course.slug }}',
                    {% endif %}
                {% endfor %}
            ],
            [
                {% for course in global.courses %}
                    {% if course.category_id == 3 %}
                        '/oferta-formativa/curso-superior/{{ course.slug }}',
                    {% endif %}
                {% endfor %}
            ],
            [
                {% for course in global.courses %}
                    {% if course.category_id == 1 %}
                        '/oferta-formativa/curso-tecnico/{{ course.slug }}',
                    {% endif %}
                {% endfor %}
            ]
        ];

        let formacion = document.getElementById('selected_formacion');
        let programa = document.getElementById('slect_programas');

        const handleSearch = () => {
            const url = urls[parseInt(formacion.value) - 1][programa.value];
            if(url)
                window.location.href = url;
        }

        formacion.addEventListener('change', (e) => {
            programa.querySelectorAll('option').forEach((e) => {
                if(e.value != '') {
                    programa.removeChild(e);
                }
            })

            for(let i in values[parseInt(e.target.value) - 1]) {
                var option = document.createElement("option");
                option.value = i;
                option.text = values[parseInt(e.target.value) - 1][i];
                programa.add(option); 
            }

        });
    </script>
